<tr class="title" data-post-type="main_{{postType}}">
    <th class="row-title" colspan="{{colSpan}}">
        {{#if hasMore}}
        	{{#if opened}}
            	<span class="dashicons dashicons-arrow-down toggle-details"></span>
        	{{else}}
            	<span class="dashicons dashicons-arrow-right toggle-details"></span>
        	{{/if}}
        {{/if}}
        {{t title}}
        {{#if add}}
        <button class="button add">
            <span data-code="f132" class="dashicons dashicons-plus"></span>{{t addText}}
        </button>
        {{/if}}
    </th>
    <th class="row-title">{{amount}}{{#if maxAmount}} / {{{maxAmount}}}{{/if}}</th>
</tr>