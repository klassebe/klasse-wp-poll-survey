<h2>{{label}}</h2>
<div>
    <ul id="errors">

    </ul>
</div>
<div>  
	<form id="update-model">
        {{#if post_title}}
            <div class="form-group">{{t "Title"}}: <input type="text" name="post_title" id="kwps-question-group-title" value="{{post_title}}"><span class="help-block hidden"></span></div>
        {{/if}}

        {{#if _kwps_answer_option_value}}
            <div class="form-group">{{t "Value"}}: <input type="text" name="_kwps_answer_option_value" id="kwps-answer-option-value" value="{{_kwps_answer_option_value}}"><span class="help-block hidden"></span></div>
        {{/if}}

        {{#if min_max}}
            <div class="form-group">{{t "Min value"}}: <input type="text" name="_kwps_min_value" id="kwps-answer-option-value" value="{{_kwps_min_value}}"><span class="help-block hidden"></span></div>
            <div class="form-group">{{t "Max value"}}: <input type="text" name="_kwps_max_value" id="kwps-answer-option-value" value="{{_kwps_max_value}}"><span class="help-block hidden"></span></div>
        {{/if}}

        <br>
        <button id="add-media-button"><span class="add-media-icon"></span>{{t "Add media"}}</button>
        {{#if addResults}}
        <button id="add-result-button">{{t "Add results"}}</button>
        {{/if}}
        <div id="editor-tiny" class="form-group">
		 <textarea name='post_content' rows="20">{{post_content}}</textarea><span class="help-block hidden"></span>
        </div>
		<button id="update">{{t "Update"}}</button>
	</form>
</div>
